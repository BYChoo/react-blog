.admin-reg{
  position: fixed
  top: 50%
  left: 50%
  text-align: center;
  transform: translate(-50%,-50%);
  h1{
    font-size: 36px;
    font-weight: bold;
    margin-bottom: 51px
  }
  .admin-reg-item{
    margin-bottom: 10px;
    padding: 0 10px;
    border: 1px solid #000;
    input {
      display: block;
      width: 300px;
      height: 50px;
      margin: 0 auto;
      border: none;
      padding-left: 10px;
      border-radius: 3px;
      background: none;
      outline: none;
      border: 0px;
      outline: none;
    }
  }
  .admin-reg-btn{
    display: block;
    height: 50px;
    line-height: 50px
    background-color: #0288d1;
    color: #fff;
  }
}