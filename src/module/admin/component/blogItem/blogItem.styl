.blog-item{
  background-color: #fff;
  color: #000
  padding: 10px;
  margin-bottom: 10px
  border-radius: 5px;
  cursor pointer
  border: 1px solid #ccc;
  h3 {
    font-size 20px
    overflow: hidden;
    white-space: nowrap;
    text-overflow: ellipsis;
  }
  p {
    margin-top 10px
    i {
      color: #ccc
    }
  }
  .blog-item-tag{
    margin-left: 5px
  }
  .blog-item-date{
    margin-left: 5px
  }
}

.blog-item-current{
  border 1px solid #4d4d4d
}