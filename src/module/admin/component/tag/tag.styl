.admin-tag{
  display: inline-block;
  text-decoration: none;
  font-weight: 400;
  font-size: 10px;
  color: #fff;
  height: 18px;
  line-height: 18px;
  float: left;
  padding: 5px 5px 5px 10px;
  position: relative;
  border-radius: 0 5px 5px 0;
  margin: 5px 9px 5px 15px;
  background: #0084ff;
  &:before{
    content: " ";
    width: 0;
    height: 0;
    position: absolute;
    top: 0;
    left: -12px;
    width: 0;
    height: 0;
    border-top: 14px solid transparent;
    border-right: 12px solid #0084ff;
    border-bottom: 14px solid transparent;
  }
  &:after{
    content: " ";
    width: 4px;
    height: 4px;
    background-color: #fff;
    border-radius: 4px;
    box-shadow: 0 0 0 1px #0084ff;
    position: absolute;
    top: 12px;
    left: 2px;
  }
  i {
    margin-left: 5px
  }
}